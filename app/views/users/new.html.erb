<h1> Sign up here </h1>
<ul>
	<%= form_for @user, {url: user_path} do |f| %>
	<li><%= f.text_field :name, placeholder:"Name" %></li>
	<li><%= f.text_field :email, placeholder:"Email" %></li>
	<li><%= f.text_field :location, placeholder:"Where do you live?" %></li>
	<li><%= f.password_field :password_digest, placeholder:"Enter Password" %></li>
	<li><%= f.password_field :password_confirmation, placeholder: "Confirm Password" %></li>
	<li><%= f.submit "Sign up!" %></li>
	<% end %>
</ul>