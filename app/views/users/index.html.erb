<body>
<h2>Welcome, <%= current_user.name %></h2>

<%= image_tag current_user.image.url, size: "100" %>

<% if current_user %>
		<p>Whats your song today <%= current_user.name %>?</p>
		<p><%= link_to "New Song", new_song_path %></p><br/>
		<p>What are others singing today?</p>
		<p><%= link_to "All Songs", songs_path %></p>
<% else %>
		 <%= link_to "Login", new_session_path if !@is_login%>
<% end %>

<h2> Your Songs </h2>
	<ul><br/>
		<li><% current_user.songs.all.each do |s| %></li>
		<li><%= s.name %></li>
		<li><%= s.location %></li>
		<li><%= s.text %></li>
		<%= link_to 'Delete', method: :delete %>
		<%= link_to "Edit", edit_song_path(s.id) %><br/>
		<% end %><br/>
	</ul>
</body>